<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-4 col-lg-4">
      <div class="bg-white p-4 rounded-4 shadow">
        <h2 class="mb-3 fw-bold text-center text-primary"><i class="fa-solid fa-user-plus"></i> Sign Up</h2>
          <% if(messages.error.length> 0){ %>
          <div class="alert alert-danger alert-dismissible fade show" id="signupAlert">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>
              <%= messages.error %>
            </strong>
          </div>
          <% } %>
        <form action="/auth/sign-up" method="post">
          <div class="mb-3">
            <input type="text" name="username" id="username" placeholder="Username" class="form-control" required>
          </div>
          <div class="mb-3">
            <input type="text" name="email" id="email" placeholder="E-mail" class="form-control" required>
          </div>
          <div class="mb-3">
            <input type="password" name="password" id="password" placeholder="Password" class="form-control" required>
          </div>
          <div class="mb-4">
            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="confirm Password" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  setTimeout(() => {
    const Alert = document.getElementById('signupAlert');
    if (Alert) {
      const signinAlert = bootstrap.Alert.getOrCreateInstance(Alert);
      signinAlert.close();
    }
  }, 3000);
</script>