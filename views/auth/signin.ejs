<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="bg-white p-4 rounded-4 shadow-sm">
        <h2 class="mb-3 fw-bold text-center">Sign In</h2>

        <% if(error){ %>
          <p class="mb-2 text-danger text-center"><%= error %></p>
        <% } %>

        <form action="/auth/sign-in" method="post">
          <div class="mb-3">
            <input type="text" name="username" id="username" placeholder="Username" class="form-control rounded-3">
          </div>
          <div class="mb-3">
            <input type="text" name="email" id="email" placeholder="E-mail" class="form-control rounded-3">
          </div>
          <div class="mb-4">
            <input type="password" name="password" id="password" placeholder="Password" class="form-control rounded-3">
          </div>
          <button type="submit" class="btn btn-primary w-100 rounded-3">Sign in</button>
        </form>
      </div>
    </div>
  </div>
</div>
