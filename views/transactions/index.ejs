<div class="container my-3">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="bg-white shadow p-4 rounded-4 table-responsive">
                <table class="table table-striped table-hover rounded-2">
                    <thead class="table-primary">
                    <h1 class=" mb-4 fs-3">Transactions</h1>
                    <tr>
                        <th>Amount</th>
                        <th>Date Paid</th>
                        <th>Paid</th>
                        <th>Subscription Name</th>
                        <th>Subscription Status</th>
                    </tr>
                    </thead>
                    <tbody>
                       <% const formatDate=(date)=> {
                        const d = new Date(date);
                        return d.toISOString().split('T')[0];
                        }; 
                        userTransactions.forEach(transaction =>{ %>
                        <tr>
                            <td><%= transaction.amount %></td>
                            <td><%= transaction.datePaid %></td>
                            <td><%= formatDate(transaction.datePaid)%></td>
                            <td><%= transaction.subscription.name %></td>
                            <td><span class="badge bg-<%= transaction.subscription.status === 'Active' ? 'success' : 'secondary' %>"><%= transaction.subscription.status %></span></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>